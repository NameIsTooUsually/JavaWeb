<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chenhao.servlet_demo.mapper.UserMapper">

    <select id="validateUser" resultType="com.chenhao.servlet_demo.polo.User">
        select * from tb_user where
        username = #{username}
        and password = #{password}
    </select>
</mapper>